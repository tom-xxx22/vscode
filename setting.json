{
  "window.commandCenter": false,
  "workbench.editor.showTabs": "none",
  "workbench.activityBar.location": "top",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": true,
  "workbench.sideBar.location": "right",
  "editor.minimap.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  "workbench.iconTheme": "vscode-icons",
  "window.menuBarVisibility": "toggle",

  // custom
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#e785c5",
    "editorBracketHighlight.foreground2": "#8eeb7b",
    "editorBracketHighlight.foreground3": "#dfad79"
  },
  "terminal.integrated.fontFamily": "JetbrainsMono Nerd Font",
  "editor.fontFamily": "JetbrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.horizontalScrollbarSize": 9,
  "editor.scrollbar.verticalScrollbarSize": 9,
  "editor.codeLensFontFamily": "JetbrainsMono Nerd Font",
  "editor.experimentalInlineEdit.fontFamily": "JetbrainsMono Nerd Font",
  "editor.inlayHints.fontFamily": "JetbrainsMono Nerd Font",
  "editor.inlineSuggest.fontFamily": "JetbrainsMono Nerd Font",
  "debug.console.fontFamily": "JetbrainsMono Nerd Font",
  "scm.inputFontFamily": "JetbrainsMono Nerd Font",
  "notebook.output.fontFamily": "JetbrainsMono Nerd Font",
  "chat.editor.fontFamily": "JetbrainsMono Nerd Font",
  "editor.lineHeight": 1.5,
  "eslint.format.enable": true,
  "workbench.colorTheme": "Moonlight Italic",
  "terminal.integrated.tabs.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.layoutControl.enabled": false,
  "background.enabled": true,
  "background.fullscreen": {
    "images": ["https://4kwallpapers.com/images/walls/thumbs_3t/11154.jpg"], // urls of your images
    "opacity": 0.86, // 0.85 ~ 0.95 recommended
    "size": "cover", // also css, `cover` to self-adaption (recommended)，or `contain`、`200px 200px`
    "position": "center" // alias to `background-position`, default `center`
  }
}
